<Page x:Class="VisualShow_Admin.View.Page_Gestion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisualShow_Admin.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
       ui:Design.Background="{DynamicResource TextControlBackground}"
      Title="Page_Gestion">

        <Grid >

            <StackPanel Name="TerminalOutput" Background="Black"  Margin="10" VerticalAlignment="Top" Orientation="Vertical" CanVerticallyScroll="True">

            </StackPanel>


            <DockPanel Margin="10">
                <TextBox Name="CommandInput" DockPanel.Dock="Bottom" Background="Black" Foreground="White"
              BorderThickness="0" FontFamily="Consolas" FontSize="14" VerticalAlignment="Bottom" AcceptsReturn="True"  />

                <TextBlock Name="Prompt" Text="$ " VerticalAlignment="Bottom" Foreground="White" FontFamily="Consolas" FontSize="14"/>
            </DockPanel>
        </Grid>
</Page>
